<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealbridgeApptestPrism.Views.MainPage"
             xmlns:prism="http://prismlibrary.com"
             Title="{Binding Title}">

    <ContentPage.Resources>
        
    </ContentPage.Resources>

    <StackLayout>
        <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
            <ListView ItemsSource="{Binding Radio}" SelectionMode="Single" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <ListView.Behaviors>
                    <prism:EventToCommandBehavior EventName="ItemTapped"
                                              Command="{Binding ItemTappedCommand}"/>
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding Channel.image}" 
                                   Text="{Binding Channel.name}" TextColor="Black"
                                   Detail="{Binding Playlist.song.description}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </RefreshView>
    </StackLayout>

</ContentPage>